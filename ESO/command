helm repo add external-secrets https://charts.external-secrets.io

helm install external-secrets \
   external-secrets/external-secrets \
    -n external-secrets \
    --create-namespace \
  # --set installCRDs=true

echo -ne '{"password":"dtcloud2022!"}' | gcloud secrets create dtcloudteamv2 --data-file=- --locations=europe-west1 --replication-policy="user-managed"
 gcloud secrets add-iam-policy-binding dtcloudteamv2 --member "serviceAccount:gke-sa@dt-terraform-test.iam.gserviceaccount.com" --role "roles/secretmanager.secretAccessor"
  337  kubectl create serviceaccount dtcloudsm-sa     --namespace external-secrets
